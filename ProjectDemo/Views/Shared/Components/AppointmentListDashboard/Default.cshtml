@using EntityLayer.Concrete
@model List<Appointment>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Benim Günlük Müşterilerim</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> NAME </th>
                                <th> SURNAME  </th>
                                <th> AÇIKLAMA </th>
                                <th> TARİH </th>
                                <th> DURUM  </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Customer_Id</td>
                                    <td>@item.Customer.Name </td>                                     
                                    <td>@item.Customer.Surname </td>
                                    <td>@item.Description </td>
                                    <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy-hh.mm"))</td>
                                    @if (item.Date<DateTime.Now)
                                    {
                                        <td>Pasif</td>
                                    }
                                    else
                                    {
                                        <td>Aktif</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>